#include <SPI.h>
#include <LoRa.h>

const int csPin = 10, resetPin = 9, irqPin = 2;
const int buttonPin = 3;
bool lastButtonState = HIGH;
unsigned long lastDebounceTime = 0;
const unsigned long debounceDelay = 50;

void setup() {
  Serial.begin(115200);
  pinMode(buttonPin, INPUT_PULLUP);
  
  LoRa.setPins(csPin, resetPin, irqPin);
  if (!LoRa.begin(868E6)) {
    Serial.println("LoRa init failed!");
    while (1);
  }
  
  LoRa.setTxPower(14);
  Serial.println("Button Controller Ready");
  Serial.println("Press button to toggle remote LED");
}

void loop() {
  int reading = digitalRead(buttonPin);
  
  // Button debouncing
  if (reading != lastButtonState) {
    lastDebounceTime = millis();
  }
  
  if ((millis() - lastDebounceTime) > debounceDelay) {
    if (reading == LOW && lastButtonState == HIGH) {
      // Button pressed - send toggle command
      LoRa.beginPacket();
      LoRa.print("TOGGLE_LED");
      LoRa.endPacket();
      Serial.println("Sent: TOGGLE_LED");
      
      // Wait for button release
      delay(300); // Simple debounce
      while (digitalRead(buttonPin) == LOW);
    }
  }
  
  lastButtonState = reading;
}

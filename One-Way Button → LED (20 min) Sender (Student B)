const int ledPin = 8;

void setup() {
  // ... same
  pinMode(ledPin, OUTPUT);
}

void loop() {
  int packetSize = LoRa.parsePacket();
  if (packetSize) {
    String msg = "";
    while (LoRa.available()) msg += (char)LoRa.read();
    if (msg == "toggle") {
      digitalWrite(ledPin, !digitalRead(ledPin));
      Serial.println("LED toggled");
    }
  }
}

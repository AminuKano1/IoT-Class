# test_camera.py
import cv2
import time

print("Testing camera...")
camera = cv2.VideoCapture(0)

# Wait for camera
time.sleep(2)

ret, frame = camera.read()
if ret:
    print("Camera working! Saving test image...")
    cv2.imwrite('test_photo.jpg', frame)
    print("Test image saved as 'test_photo.jpg'")
else:
    print("ERROR: Cannot access camera!")

camera.release()
print("Test complete!")
